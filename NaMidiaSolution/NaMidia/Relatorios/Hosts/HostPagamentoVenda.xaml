<Window x:Class="NaMidia.RELATORIOS.HostPagamentoVenda"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wfi="clr-namespace:System.Windows.Forms.Integration;assembly=WindowsFormsIntegration"
        xmlns:wfr="clr-namespace:Microsoft.Reporting.WinForms;assembly=Microsoft.ReportViewer.WinForms"
        Title="Relatório de Venda"
        WindowStartupLocation="CenterScreen"
        Width="842">

    <Grid Margin="0,0,0,0">

        <WindowsFormsHost x:Name="winFormsHost">

            <wfr:ReportViewer Margin="0,0,0,0"
                              x:Name="rptViewer"
                              ProcessingMode="Local" />
        </WindowsFormsHost>

    </Grid>

</Window>
